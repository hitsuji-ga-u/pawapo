<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon startFromScratch="false">
    <tabs>
      <tab id="customTab" label="tools" insertBeforeMso="TabHome" keytip="x">
        <group id="align">
          <button idMso="ObjectsAlignLeftSmart" showLabel="false" keytip="Zaa"/>
          <button idMso="ObjectsAlignTopSmart" showLabel="false" keytip="Zas"/>
          <button id="ObjectsAlignTLSmart" imageMso="SmartArtSmallerShape" showLabel="false" onAction="ObjectsAlignTopLeft" keytip="Daw"/>

          <button idMso="ObjectsAlignRightSmart" showLabel="false" keytip="Zad"/>
          <button idMso="ObjectsAlignBottomSmart" showLabel="false" keytip="Zaf"/>
          <button id="ObjectsAlignTRSmart" image="SmartArtSmallerShapeTopLeft" showLabel="false" onAction="ObjectsAlignTopRight" keytip="Dae"/>

          <button id="AlignCenterVertical" imageMso="ObjectsAlignMiddleVerticalSmart" showLabel="false" onAction="AlignCenterVertical" keytip="Dcx"/>
          <button id="AlignCenterHorizontal" imageMso="ObjectsAlignCenterHorizontalSmart" showLabel="false" onAction="AlignCenterHorizontal" keytip="Dcv"/>
          <button id="AlignCenter" image="ObjectsAlignCenter" showLabel="false" onAction="AlignCenter" keytip="Dcc" />

          <button idMso="AlignDistributeHorizontally" showLabel="false" keytip="ZDd"/>
          <button idMso="AlignDistributeVertically" showLabel="false" keytip="ZDs"/>
          <button idMso="ObjectBringToFront" showLabel="false" keytip="ZXx"/>

          <button idMso="ObjectFlipHorizontal" showLabel="false" keytip="ZVv"/>
          <button idMso="ObjectFlipVertical" showLabel="false" keytip="ZVc"/>
          <button idMso="ObjectSendToBack" showLabel="false" keytip="ZXz"/>

          <button id="AlignShapesVerticalStick" showLabel="false" image="ShapesAlignStickVertical" onAction="AlignShapesVerticalStick" keytip="Das"/>
          <button id="AlignShapesHorizontalStick" showLabel="false" image="ShapesAlignStickHorizontal" onAction="AlignShapesHorizontalStick" keytip="Daa"/>          
        </group>

        <group id="align_setting">
          <toggleButton idMso="ObjectsAlignRelativeToContainerSmart" showImage="false" label="slide" keytip="Zff"/>
          <toggleButton idMso="ObjectsAlignSelectedSmart" showImage="false" label="shapes" keytip="Zfd"/>
        </group>

        <group id="insert_shapes">
          <toggleButton idMso="ShapeRectangle" showLabel="false" keytip="CXx"/>
          <toggleButton idMso="ShapeRoundedRectangle" showLabel="false" keytip="CXz"/>
          <toggleButton idMso="ShapeOval" showLabel="false" keytip="CAa"/>

          <toggleButton idMso="ShapeIsoscelesTriangle" showLabel="false" keytip="CAs"/>
          <toggleButton idMso="ShapeLeftBrace" showLabel="false" keytip="CDd"/>
          <toggleButton idMso="ShapeRightBrace" showLabel="false" keytip="CDf"/>

          <toggleButton idMso="ShapeRightArrow" showLabel="false" keytip="CSd"/>
          <toggleButton idMso="ShapeDownArrow" showLabel="false" keytip="CSs"/>
          <button id="wrap_off" label="insert nowrap textbox" showLabel="false" imageMso="TextBoxInsert" onAction="InsertNoWrapTextBox" keytip="Cv" />

          <toggleButton idMso="ShapeStraightConnectorArrow" showLabel="false" keytip="CCc"/>
          <toggleButton idMso="ShapeStraightConnector" showLabel="false" keytip="CCx"/>
        </group>

        <group id="format">
          <gallery idMso="ShapesInsertGallery" showLabel="false"/>
          <gallery idMso="ShapeFillColorPicker" showLabel="false"/>
          <gallery idMso="OutlineColorPicker" showLabel="false"/>

          <gallery idMso="OutlineWeightGallery" showLabel="false"/>
          <gallery idMso="ShapeQuickStylesHome" showLabel="false"/>
          <button idMso="WordArtVerticalText"/>
        </group>

        <group id="window">
          <button idMso="ObjectFormatDialog" showLabel="false" keytip="XDd"/>
          <toggleButton idMso="SelectionPane" showLabel="false" keytip="XDs"/>
          <button idMso="TextFillMoreTextures" showLabel="false" keytip="XDc"/>

          <button idMso="SymbolInsert" showLabel="false" keytip="Xcc" />
        </group>

        <group id="tools">
          <button id="AdjustShapesSize" label="adjust sizes" showLabel="false" image="AdjustShapesSize" onAction="AdjustShapesSize" keytip="Dss" />
          <button id="AdjustShapesHeight" label="adjust heights" showLabel="false" imageMso="SizeToTallest" onAction="AdjustShapesHeight" keytip="Dsa" />
          <button id="AdjustShapesWidth" label="adjust widths" showLabel="false" imageMso="SizeToWidest" onAction="AdjustShapesWidth" keytip="Dsd" />

          <button id="CopyShapesPos" label="copy pos of shapes" showLabel="false" imageMso="PasteAlternative" onAction="CopyShapesPos" keytip="Dff" />
          <button id="PasteShapesAbsolutely" label="adjust heights" showLabel="false" imageMso="SlidesPerPage4Slides" onAction="PasteShapesAbsolutely" keytip="Dfd" />
          <button id="PasteShapesRelatively" label="adjust widths" showLabel="false" imageMso="CreateDiagram" onAction="PasteShapesRelatively" keytip="Dfs" />

          <button id="fill_none" label="fill none" showLabel="false" imageMso="AppointmentColor0" onAction="ShapeFillToNone" keytip="Dfv" />
          <toggleButton idMso="ObjectEditPoints" showLabel="false" keytip="Dda"/>
          <toggleButton idMso="PictureCrop" showLabel="false" keytip="Dds" />

          <button id="MoveToAnchor" label="move to anchor" showLabel="false" imageMso="ControlMarginsGallery" onAction="MoveToAnchor" keytip="Dse" />
          <button id="TableWidthAutoFit" label="auto fit table width" showLabel="false" imageMso="SpeakByRows" onAction="TableWidthAutoFit" keytip="De" />
          <button id="DeleteAndPasteShape" label="delete and paste" showLabel="false" imageMso="Paste" onAction="DeleteAndPasteShape" keytip="V" />
          <button id="clip_path" label="clip path" showLabel="false" imageMso="HeaderFooterFilePathInsert" onAction="ClipPath" keytip="Ddr" />
        </group>

        <group id="font">
          <comboBox idMso="Font"/>
          <comboBox idMso="FontSize"/>
          <gallery idMso="FontColorPicker"/>

          <toggleButton idMso="Strikethrough"/>

          <button idMso="FontSizeIncrease"/>
          <button idMso="FontSizeDecrease"/>
        </group>

        <group idMso="GroupSize"/>
        <group idMso="GroupViewShowHide"/>
      </tab>
    </tabs>
  </ribbon>
</customUI>